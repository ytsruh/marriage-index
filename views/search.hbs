<section>
  <div class="container search-form">
      <h4 class="brown-text center-align">Search the database</h4>
      <div class="row">
          <form class="col s10 offset-s1">
            <div class="row">
              <div class="input-field col s6">
                <i class="brown-text material-icons prefix">account_circle</i>
                <input id="surname" type="text" class="validate" name="surname" required>
                <label for="surname">Surname</label>
              </div>
              <div class="input-field col s6">
                <i class="brown-text material-icons prefix">face</i>
                <input id="firstname" type="text" class="validate" name="firstname">
                <label for="firstname">First Name</label>
              </div>
              <div class="input-field col s6">
                <i class="brown-text material-icons prefix">home</i>
                <input id="town" type="text" class="validate" name="town">
                <label for="town">Town</label>
              </div>
              <div class="input-field col s6">
                  <i class="brown-text material-icons prefix">date_range</i>
                  <input id="year" type="text" class="datepicker" name="year">
                  <label for="year">Year</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light right" id="search-submit" type="submit">Submit
              <i class="material-icons right">search</i>
            </button>
          </form>
        </div>
  </div>
</section>

<section>
  <div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="">
        <div class="row">
          <div class="col s10 offset-s1">
            <div class="card hide results">
              <div class="card-content black-text" id="table-container">
                <span class="card-title">Search Results</span>
                <table class="bordered highlight centered">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Spouse</th>
                      <th>Location</th>
                      <th>Date (dd/mm/yyyy)</th>
                      <th>Library Reference</th>
                    </tr>
                  </thead>
                  <tbody>

                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="row hide results">
          <div class="col s6 offset-s3">
            <button class="btn waves-effect waves-light right search-again">Search Again</button>
            <button class="btn waves-effect waves-light left download-csv">Download CSV</button>
          </div>
        </div>
        <div class="row">
          <div class="col s8 offset-s2">
            <div class="card hide results center-align">
              <div class="card-content black-text">
                <p class="">Please note that the records either show a marriage date or provide a library reference. Both are usually not provided by the original records</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="parallax"><img src="static/images/pexels-photo-130111.jpeg" alt="Unsplashed background img 2"></div>
  </div>
</section>
